<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yelp Camp</title>
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.3.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.3.0/mapbox-gl.css' rel='stylesheet' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/app.css">
</head>

<body class="d-flex flex-column vh-100">
    <%- include('../partials/navbar') %>
        <main>
            <div id="map"></div>
            <div class="container">
                <%- include('../partials/flash') %>
                    <h1 class="text-center">All Campgrounds</h1>
                    <a href="http://localhost:3000/campgrounds/new" class="btn btn-sm btn-success mb-3">Add</a>
                    <ul>
                        <% for (let campground of campgrounds) { %>

                            <div class="card mb-3">
                                <div class="row">
                                    <div class="col-md-4 d-flex align-items-center justify-content-center">
                                        <% if (!campground.images.length) {%>
                                            <img class="img-fluid h-100"
                                                src="https://source.unsplash.com/collection/483251" alt="">
                                            <% } else { %>
                                                <img class="img-fluid h-100" src="<%= campground.images[0].url %>"
                                                    alt="">
                                                <% } %>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="cart-title">
                                                <a href="http://localhost:3000/campgrounds/<%= campground._id %>"
                                                    class="text-decoration-none">
                                                    <%= campground.title %>
                                                </a>
                                            </h5>
                                            <p class="card-text">
                                                <%= campground.description %>
                                            </p>
                                            <p class="cart-text">
                                                <small class="tex-muted">
                                                    <%= campground.location %>
                                                </small>
                                            </p>
                                            <a href="http://localhost:3000/campgrounds/<%= campground._id %>"
                                                class="btn btn-primary">View</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </ul>
            </div>

        </main>
        <%- include('../partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
                crossorigin="anonymous"></script>
            <script src="/js/formValidation.js"></script>
            <script src="/js/preventNoRating.js"></script>
            <script>
                const mapboxToken = '<%-process.env.MAPBOX_TOKEN%>';
                const campgrounds = { features: <%-JSON.stringify(campgrounds)%>}
            </script>
            <script src="/js/clusterMap.js"></script>
</body>

</html>