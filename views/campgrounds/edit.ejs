<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card shadow mb-3">
                <img src="https://images.unsplash.com/photo-1527931548997-178c464df936?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=750&q=80"
                    alt="Login YelpCamp" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Edit <%= campground.title %></h5>
                    <form method="POST" action="/campgrounds/<%= campground._id %>?_method=PUT"
                        enctype="multipart/form-data" novalidate class="needs-validation">
                        <!-- base on input[name] we will get object campground{title:..., price:...,...} parse to req.body =>req.body.campground -->
                        <div class="form-group mb-3">
                            <label for="title" aria-label="Title">Title</label>
                            <input type="text" id="title" name="campground[title]" class="form-control"
                                value="<%= campground.title %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="location" aria-label="Location">Location</label>
                            <input type="text" id="location" name="campground[location]" class="form-control"
                                value="<%= campground.location %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="price" aria-label="Price">Price</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text">$</span>
                                <input type="number" step="0.01" id="price" name="campground[price]" class="form-control"
                                    value="<%= campground.price %>" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="description" class="form-label" aria-label="Description">Description</label>
                            <textarea id="description" name="campground[description]"
                                class="form-control"><%= campground.description %> required"></textarea>
                        </div>
                        <div>
                            <label for="" class="form-label">Select images for removing</label>
                            <div class="row">
                                <% campground.images.forEach(function (image, index) {%>
                                    <% if (image.url) {%>
                                        <div
                                            class="col-4 d-flex flex-column justify-content-center align-items-center mb-3">
                                            <img class="img-thumbnail mb-1 h-100 w-auto" src="<%= image.thumbnail %>"
                                                alt="<%= image.filename %>">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="image-<%= index %>"
                                                    name="deleteImages[]" value="<%= image.filename %>">
                                            </div>
                                        </div>
                                        <% } %>
                                            <% }) %>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Upload more images</label>
                            <div class="input-group input-group-sm">
                                <input type="file" name="image" class="form-control"
                                    aria-describedby="inputGroupFileAddon04" aria-label="Upload" multiple>
                            </div>
                        </div>
                        <div class=" my-4">
                            <a href="/campgrounds/<%= campground._id %>"
                                class="btn btn-secondary">Cancel</a>
                            <button class="btn btn-info">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            </div>
        </div>
    </div>